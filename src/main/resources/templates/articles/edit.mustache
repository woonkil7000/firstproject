{{>layouts/header}}
{{#article}}
<form class="container" action="/articles/update" method="post">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="hidden" class="form-control" value="{{id}}" name="id">
        <input type="text" class="form-control" value="{{title}}" name="title">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" row="10"  name="content">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">저 장</button>
</form>
{{/article}}

<a href="/articles/{{article.id}}"  class="btn btn-primary">Back</a>
<a href="/articles"    class="btn btn-primary">Article List</a>
<a href="/articles/new"  class="btn btn-primary">New Article</a>

{{>layouts/footer}}